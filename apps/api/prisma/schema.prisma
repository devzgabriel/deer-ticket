// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TeamMember {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  skills    Skill[]
  tickets   Ticket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id          String       @id @default(uuid())
  name        String       @unique
  teamMembers TeamMember[]
  tickets     Ticket[]
  createdAt   DateTime     @default(now())
}

model Ticket {
  id             String       @id @default(uuid())
  title          String
  description    String
  deadline       DateTime?
  status         TicketStatus @default(OPEN)
  priority       Priority     @default(MEDIUM)
  requiredSkills Skill[]
  assignedTo     TeamMember?  @relation(fields: [assigneeId], references: [id])
  assigneeId     String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  REVIEW
  COMPLETED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
